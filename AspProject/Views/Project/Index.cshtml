@model ProjectViewModel
@{
    ViewData["Title"] = "Index";
}
    <partial name="_HeaderSection" model="Model.HeaderViewModel" />
<!--body content wrap start-->
    <div class="main">
        <!--our work or portfolio section start-->
        <section class="our-portfolio-section ptb-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="section-heading text-center mb-5">
                            <h2>Check Our Quality Work</h2>
                            <p class="lead">
                                Dynamically pursue reliable convergence rather than 24/7 process improvements. Intrinsicly
                                develop end-to-end customer service without extensive data.
                            </p>
                        </div>
                    </div>
                </div>
                <partial name="_OurWorkOrPortfolio" model="Model.HomePortfolioItems" />
            </div>
        </section>
        <!--our work or portfolio section end-->
        <!--counter section start-->
        <section class="call-to-action ptb-100 gradient-overlay" style="background: url('/assets/img/@Model.ProjectCounter.Photo')no-repeat top center / cover fixed">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="call-to-action-content text-white">
                            <h2 class="text-white mb-1">Looking for Quality Services ?</h2>
                            <p>Progressively deliver market-driven quality vectors rather than goal-oriented niche markets.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="action-btn text-lg-right text-sm-left">
                            <a href="#" class="btn outline-white-btn">Contact us Today</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--counter section end-->
        <!--our pricing section start-->
        <section class="pricing-section ptb-100 gray-light-bg">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="section-heading text-center mb-5">
                            <h2>Affordable Pricing and Packages</h2>
                            <p CLASS="lead">
                                Efficiently aggregate end-to-end core competencies without maintainable ideas. Dynamically
                                foster tactical solutions without enabled value.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    @foreach (var item in Model.ProjectPricings)
                    {
                        <div class="col-lg-4 col-md">
                            <div class="card text-center single-pricing-pack">
                                <div class="pt-4"><h5>@item.Name</h5></div>
                                <div class="pricing-img mt-4">
                                    <img src="~/assets/img/@item.Photo" alt="pricing img" class="img-fluid">
                                </div>
                                <div class="card-header py-4 border-0 pricing-header">
                                    <div class="h1 text-center mb-0">$<span class="price font-weight-bolder">@item.Price</span></div>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled text-sm mb-4 pricing-feature-list">
                                        @foreach (var data in Model.ProjectPricingItems)
                                        {
                                            <li>@data.Label</li>
                                        }

                                    </ul>
                                    <a href="#" class="btn outline-btn mb-3" target="_blank">Purchase now</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </section>
        <!--our pricing section end-->
        <partial name="_Testimonial" model="Model.AboutTestimonials" />
        <partial name="_Client" model="Model.Clients" />


    </div>
            <!--body content wrap end-->
